<html>
<head>
    <title><%=title%></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="./home.css">
</head>
<body>
    <div id="contact_list">
   <h1></h1>
    <h1 id="page-header"><i class="fas fa-address-book"></i>  My Contact list</h1>
    <ul class="my_list">
        <% for(let i of contact_list){ %>
            <li class="details">
                <div class="contact_data">
                    <p><%=i.name%></p>
                    <p><%=i.phone%></p>
                </div>
                <div class="delete">
                    <a href="/delete-contact/?id=<%=i.id%>">
                        <i class="fas fa-window-close "></i>
                    </a>
                </div>
            </li>
        <%}%>
    
    </ul>
    <div class="input_division">
        <form action="create-contact" method="post" class="form-data">
            <p><b>Enter Your name</b></p>
            <input type="text" placeholder="Please Enter your name" name="name" required>
            <p><b>Enter your Phone Number</p>
            <input type="number" placeholder="Please Enter your number" name="phone" required>
           <p><button type="submit">Add</button></p> 
        </form>
    </div>
</div>
<script type="text/javascript" src="./home.js"></script>
</body>
</html>